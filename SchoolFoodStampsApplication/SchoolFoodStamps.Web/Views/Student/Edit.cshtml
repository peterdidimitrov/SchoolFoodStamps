@model StudentFormViewModel;
@{
    ViewBag.Title = "Edit Student";
    var presentTime = DateTime.Now.ToString(DateOfBirthFormat);
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Student" asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">First name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">Last name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DateOfBirth" class="form-label-add-edit">Date of birth</label>
                <input asp-for="@Model.DateOfBirth" class="form-control" aria-required="true" value="@(string.IsNullOrEmpty(Model.DateOfBirth) ? presentTime : Model.DateOfBirth)" )" />
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ClassNumber" class="form-label-add-edit">Class Number</label>
                <select asp-for="@Model.ClassNumber" class="form-control" aria-required="true">
                    @foreach (var number in Model.ClassNumbers)
                    {
                        <option value="@number">@number</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ClassLetter" class="form-label-add-edit">Class Letter</label>
                <select asp-for="@Model.ClassLetter" class="form-control" aria-required="true">
                    @foreach (var leter in Model.ClassLetters)
                    {
                        <option value="@leter">@leter</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SchoolId" class="form-label-add-edit">Select School</label>
                <select asp-for="@Model.SchoolId" class="form-control" aria-required="true">
                    @foreach (var school in Model.Schools)
                    {
                        <option value="@school.Id.ToString()">@school.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.SchoolId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Edit" />
            </div>
            <div class="mb-3">
                <a asp-action="Index" asp-controller="Student" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Back to all students</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

