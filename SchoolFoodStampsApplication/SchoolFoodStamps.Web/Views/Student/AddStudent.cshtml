@model StudentFormViewModel;
@using System.Globalization;
@{
    ViewBag.Title = "Student Info";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Student" asp-action="AddStudent" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">First name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">Last name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DateOfBirth" class="control-label"></label>
                <div class='input-group date' id='datepicker'>
                    <input asp-for="@Model.DateOfBirth" type="text" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture)" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div>
           @*  <div class="mb-3">
                <label asp-for="@Model.DateOfBirth" class="form-label-add-edit">Date of birth</label>
                <input asp-for="@Model.DateOfBirth" class="form-control" aria-required="false" />
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div> *@
            <div class="mb-3">
                <label asp-for="@Model.ClassNumber" class="form-label-add-edit">Class Number</label>
                <select asp-for="@Model.ClassNumber" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Number...</option>
                    @foreach (var number in Model.ClassNumbers)
                    {
                        <option value="@number">@number</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ClassLetter" class="form-label-add-edit">Class Letter</label>
                <select asp-for="@Model.ClassLetter" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Letter...</option>
                    @foreach (var leter in Model.ClassLetters)
                    {
                        <option value="@leter">@leter</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SchoolId" class="form-label-add-edit">Select School</label>
                <select asp-for="@Model.SchoolId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select School...</option>
                    @foreach (var school in Model.Schools)
                    {
                        string hashedId = HashHelper.ConvertIdToHashedString(school.Id.ToString());
                        <option value="@hashedId">@school.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.SchoolId" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-danger">Confirm Information</button>
                <a asp-controller="Parent" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
    <script>
        $(function () {
            $('#datepicker').datetimepicker();
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}

