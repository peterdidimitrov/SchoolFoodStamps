@using System.Security.Cryptography;
@using System.Text;

@model SchoolFormViewModel;
@{
    ViewBag.Title = "Create School";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="School" asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">School name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address" class="form-label-add-edit">Address</label>
                <input asp-for="@Model.Address" class="form-control" aria-required="false" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Phone</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.IdentificationNumber" class="form-label-add-edit">Identification number</label>
                <input asp-for="@Model.IdentificationNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.IdentificationNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CateringCompanyId" class="form-label-add-edit">Select Catering company</label>
                <select asp-for="@Model.CateringCompanyId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Catering company...</option>
                    @foreach (var company in Model.CateringCompanies)
                    {
                        <option value="@company.Id">@company.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CateringCompanyId" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-danger">Confirm Information</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

