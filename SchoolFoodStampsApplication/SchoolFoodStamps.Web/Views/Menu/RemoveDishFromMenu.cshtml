@model DishMenuViewModel;
@{
    ViewBag.Title = "Remove dish";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="text-danger mt-3">"Are you sure you want to remove <strong>@Model.DishName</strong> from <strong>@Model.MenuDayOfWeek</strong>?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="RemoveDishFromMenuPost" method="post">
                    <input type="hidden" asp-for="@Model.DishId" />
                    <input type="hidden" asp-for="@Model.MenuId" />
                    <button type="submit" class="btn btn-danger">Confirm remove</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
