@model MenuFormViewModel;

@{
    ViewBag.Title = "Choose menus day of week";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Menu" asp-action="Add" method="post">
            <div class="form-group col-md-2">
                <label asp-for="@Model.DayOfWeek"></label>
                <select asp-for="@Model.DayOfWeek" class="form-control">
                    <option value=""></option>
                    @foreach (CustomDayOfWeek day in Enum.GetValues(typeof(CustomDayOfWeek)))
                    {
                        <option value="@day">@day</option>
                    }
                </select>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-danger">Confirm</button>
                <a asp-controller="Menu" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


