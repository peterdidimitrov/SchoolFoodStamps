@model FoodStampFormViewModel;

@{
    ViewBag.Title = "Choose date";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="FoodStamp" asp-action="Buy" method="post">
            <div class="form-group col-md-2">
                <label asp-for="@Model.ExpiryDate"></label>
                <select asp-for="@Model.ExpiryDate" class="form-control">
                    <option value=""></option>
                    @foreach (DateTime date in Model.Dates)
                    {
                    <option value="@date">@date.ToString()</option>
                    }
                </select>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-danger">Confirm</button>
                <a asp-controller="Menu" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


